#### Node Version Manager ----------------------------------------------------
lazynvm() {
    unset -f nvm
    export NVM_DIR="${HOME}/.nvm"
    # shellcheck source=/dev/null
    [[ -s "${NVM_DIR}/nvm.sh" ]] && source "${NVM_DIR}/nvm.sh"  # This loads nvm
}

nvm() {
  lazynvm && nvm "${@}"
}

nvm "$@"
