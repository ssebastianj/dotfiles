#### =========================== Functions ===================================

# Assume "bash" shell by default
guessed_shell="bash"

guess_shell(){
    if [ -n "$ZSH_VERSION" ]; then
        # Assume shell is zsh
        guessed_shell="zsh"
    elif [ -n "$BASH_VERSION" ]; then
        # Assume shell is bash
        guessed_shell="bash"
    elif [ -n "$FISH_VERSION" ]; then
        # Assume shell is fish
        guessed_shell="fish"
    fi
}
# Try to guess shell
guess_shell

is_bash_shell(){
    [[ "$guessed_shell" == "bash" ]]
}

is_zsh_shell(){
    [[ "$guessed_shell" == "zsh" ]]
}

is_fish_shell(){
    [[ "$guessed_shell" == "fish" ]]
}


